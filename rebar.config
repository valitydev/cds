% Common project erlang options.
{erl_opts, [
    debug_info,
    warnings_as_errors,
    warn_export_all,
    warn_missing_spec,
    %  warn_untyped_record, %% FIXME cds_keysharing:share() broken
    warn_export_vars,
    warn_unused_record,
    warn_bif_clash,
    warn_obsolete_guard,
    warn_unused_vars,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_deprecated_function
]}.

% Common project dependencies.
{deps, [
    {jsx, "3.1.0"},
    %% NOTE
    %% Pinning to version "1.11.2" from hex here causes constant upgrading and recompilation of the entire project
    {jose, {git, "https://github.com/potatosalad/erlang-jose.git", {tag, "1.11.2"}}},
    {prometheus, "4.8.1"},
    {prometheus_cowboy, "0.1.8"},
    {libdecaf, "2.0.0"},
    {pooler, {git, "https://github.com/seth/pooler.git", {branch, master}}},
    {scrypt, {git, "https://github.com/kpy3/erlscrypt", {tag, "2.0.2"}}},
    {shamir, {git, "https://github.com/valitydev/shamir.git", {branch, master}}},
    {riakc, {git, "https://github.com/valitydev/riak-erlang-client.git", {branch, develop}}},
    {woody, {git, "https://github.com/valitydev/woody_erlang.git", {branch, master}}},
    {genlib, {git, "https://github.com/valitydev/genlib.git", {branch, master}}},
    {erl_health, {git, "https://github.com/valitydev/erlang-health.git", {branch, master}}},
    {cds_proto, {git, "https://github.com/valitydev/cds-proto.git", {branch, master}}},
    {tds_proto, {git, "https://github.com/valitydev/tds-proto.git", {branch, master}}},
    {msgpack, {git, "https://github.com/valitydev/msgpack-erlang", {branch, master}}},
    {scoper, {git, "https://github.com/valitydev/scoper.git", {branch, master}}},
    {identdocstore_proto, {git, "https://github.com/valitydev/identdocstore-proto.git", {branch, master}}}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    % locals_not_used,
    deprecated_functions_calls,
    deprecated_functions,
    exports_not_used
]}.

{xref_ignores, [
    % used in tests
    {cds_card_storage, get_session_card_data, 2},
    % used in tests
    {cds, find_or_create_token, 4},
    % tests
    {cds_crypto, private_decrypt, 2},
    % tests
    {cds_crypto, sign, 2},
    {cds_health, keyring, 0},
    % tests
    {cds_ident_doc_client, get_ident_doc, 2},
    % tests
    {cds_ident_doc_client, put_ident_doc, 2},
    {cds_keyring, start_link, 0},
    {cds_keyring_sup, start_link, 0},
    cds_maintenance,
    {cds_maintenance_sup, start_link, 0},
    {cds_periodic_job, behaviour_info, 1},
    {cds_recrypter, start_link, 1},
    {cds_session_cleaner, start_link, 0},
    {cds_storage, behaviour_info, 1},
    % tests
    {cds_woody_client, call, 4},
    % tests
    {cds_woody_client, call, 5},
    % tests
    {cds_card_data, validate, 2}
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        race_conditions,
        %underspecs,
        unknown
    ]},
    {plt_apps, all_deps}
]}.

{profiles, [
    {prod, [
        {deps, [
            {logger_logstash_formatter,
                {git, "https://github.com/valitydev/logger_logstash_formatter.git", {ref, "2c7b716"}}},
            {recon, "2.5.2"}
        ]},
        {relx, [
            {release, {cds, "0.1.0"}, [
                % tools for introspection
                {recon, load},
                % debugger
                {runtime_tools, load},
                % profiler
                {tools, load},
                {libdecaf, load},
                {logger_logstash_formatter, load},
                cds
            ]},
            {sys_config, "./config/sys.config"},
            {vm_args, "./config/vm.args"},
            {mode, minimal},
            {extended_start_script, true},
            {overlay, [
                {copy, "script/maintenance", "{{output_dir}}/bin/maintenance"}
            ]}
        ]}
    ]}
]}.

{plugins, [
    {erlfmt, "1.0.0"},
    {rebar3_thrift_compiler, {git, "https://github.com/rbkmoney/rebar3_thrift_compiler.git", {tag, "0.3.1"}}}
]}.

{erlfmt, [
    {print_width, 120},
    {files, ["apps/*/{src,include,test}/*.{hrl,erl}", "rebar.config"]}
]}.

{overrides, [
    {override, riakc, [
        {erl_opts, [
            {d, namespaced_types},
            {d, deprecated_19}
        ]}
    ]},
    {override, hamcrest, [
        {plugins, []}
    ]}
]}.
